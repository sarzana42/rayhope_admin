<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>顧客一覧</h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-header">
      <%= link_to "新規登録", new_customer_path %>
      
      <!-- 検索 -->
      <div class="box-tools form-inline">
          <%= search_form_for(@q, method: :get) do |f| %>
            <div class="form-group">
              <%= f.text_field :name1_or_name2_or_address1_or_address2_or_address3_or_tel1_or_tel2_or_fax_or_email_cont, class: "form-control", placeholder: "複数条件部分一致" %>
            </div>
            <div class="form-group">
              <%= f.submit '検索', class: "btn btn-primary" %>
            </div>
          <% end %>
      </div>
      <!-- 検索end -->
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>名前</th>
          <th>名前2</th>
          <th>都道府県</th>
          <th>電話番号</th>
          <th>メールアドレス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
        <td><%= link_to customer.name1, customer_path(customer) %></td>
        <td><%= customer.name2 %></td>
        <td><%= customer.address1 %></td>
        <td><%= customer.tel1 %></td>
        <td><%= customer.email %></td>
        </tr>
        <% end %>
      </table>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section>
