<section class="content-header">
<h1>家紋集</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header">
            <%= link_to "新規作成", new_rayadmin_kamon_path %>
        </div>
        <div class="box-body">
          <div class="row">
            <% @kamons.each do |kamon| %>
            
              <div class="col-xs-6 col-md-2">
                
            		<div id="img-box" class="thumbnail">
            			<%= image_tag kamon.kamonpic.thumb.url %>
            			<div id="img-box-mini"><p id="img-box-text"><%= link_to kamon.title, rayadmin_kamon_path(kamon.id) %></p>
            			</div>
            			<div id="img-box-mini-footer"><p class="img-box-tag"><%= render partial: 'tags', locals: { tags: kamon.tags } %></p></div>
            		</div>
            	</div>
            	
            <% end %>
          </div>
          
        </div>
    </div>
</section>