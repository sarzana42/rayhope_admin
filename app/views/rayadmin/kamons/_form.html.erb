
  <div class="box">  
    <div class="box-body">
      <%= form_for([:rayadmin, @kamon]) do |f| %>
        <% if @kamon.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@kamon.errors.count, "error") %> prohibited this pimage from being saved:</h2>
      
            <ul>
            <% @kamon.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-group">
          <label for="tag" class="col col-xs-12 col-sm-4 col-md-3 control-label">タグ</label>
          <div class="col col-xs-10">
            <ul id="kamon-tags"></ul>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
        <div class="form-group">
          <label for="kamonpic" class="col col-xs-12 col-sm-4 col-md-3 control-label">画像</label>
            <div class="col col-xs-10">
              <%= image_tag @kamon.kamonpic.url if @kamon.kamonpic? %>
              <%= f.file_field :kamonpic %>
              <%= f.hidden_field :kamonpic_cache %>
            </div>
            <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
        <div class="form-group">
          <label for="title" class="col col-xs-12 col-sm-4 col-md-3 control-label spacer10">タイトル</label>
            <div class="col col-xs-10">
              <%= f.text_field :title, {class:"form-control"} %>
            </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
        <div class="form-group">
          <label for="discription" class="col col-xs-12 col-sm-4 col-md-3 control-label spacer10">説明</label>
            <div class="col col-xs-10">
              <%= f.cktext_area :discription, {class:"form-control"} %>
            </div>
            <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div><br>
        <div class="form-group">
            <div class="col col-xs-10">
            <%= f.submit class: "btn btn-primary spacer10" %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
