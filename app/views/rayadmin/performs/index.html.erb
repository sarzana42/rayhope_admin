<section class="content-header">
<h1>写真集（実績）</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header">
            <%= link_to "新規作成", new_rayadmin_perform_path %>
        </div>
        <div class="box-body">
          <div class="row">
            <% @performs.each do |perform| %>
            
              <div class="col-xs-6 col-md-2">
                
            		<div id="img-box" class="thumbnail">
            			<%= image_tag perform.performimage.thumb.url %>
            			<div id="img-box-mini"><p id="img-box-text"><%= link_to perform.title, rayadmin_perform_path(perform.id) %></p>
            			</div>
            			<div id="img-box-mini-footer"><p class="img-box-tag"><%= render partial: 'tags', locals: { tags: perform.tags } %></p></div>
            		</div>
            	</div>
            	
            <% end %>
          </div>
          
        </div>
    </div>
</section>