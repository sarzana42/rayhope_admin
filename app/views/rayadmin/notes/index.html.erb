<section class="content-header">
<h1>記事一覧</h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header">
            <%= link_to "新規作成", new_rayadmin_note_path %>
        </div>
        <div class="box-body no-padding">
            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th class="col-xs-1">ID</th>
                    <th class="col-xs-1">作成者</th>
                    <th>記事タイトル</th>
                    <th class="col-xs-2"></th>
                </tr>
                </thead>
                <tbody>
                    <% @notes.each do |note| %>
                <tr>
                    <td><%= note.id %></td>
                    <td>(<%= note.user.name %>)</td>
                    <td><%= link_to note.title, rayadmin_note_path(note.id) %></td>
                    <td>
                            <div class="btn btn-info btn-xs"><%= link_to "編集", edit_rayadmin_note_path(note.id) %></div>
                            <div class="btn btn-danger btn-xs">
                                <%= link_to "削除", rayadmin_note_path(note.id), method: :delete, data: { confirm: "本当によろしいですかよろしいですか？"} %>
                            </div>
                    </td>
                </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</section>