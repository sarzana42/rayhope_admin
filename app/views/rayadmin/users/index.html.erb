<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>管理者一覧</h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-header">
      <%= link_to "新規登録", new_rayadmin_user_path %>
      <div class="box-tools">
        <!-- 検索 -->
      <div class="box-tools form-inline">
          <%= search_form_for(@q, url: rayadmin_users_path, method: :get) do |f| %>
            <div class="form-group">
              <%= f.text_field :name_or_email_cont, class: "form-control", placeholder: "複数条件部分一致" %>
            </div>
            <div class="form-group">
              <%= f.submit '検索', class: "btn btn-primary" %>
            </div>
          <% end %>
      </div>
      <!-- 検索end -->
      </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
        <td><%= link_to user.name, rayadmin_user_path(user) %></td>
        <td><%= user.email %></td>
        </tr>
        <% end %>
      </table>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section>
