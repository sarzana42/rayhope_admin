<section class="content-header">

<h1>プロジェクト更新</h1>

</section>

<section class="content">
    <div class="box">
        <div class="box-body">
        <%= form_for([:rayadmin, @project]) do |f| %>
            <div class="form-group col-md-7">
                <%= f.label :title %>
                <%= f.text_field :title %>
                <% if @project.errors.any? %>
                    <%= @project.errors.messages[:title][0] %>
                <% end %>
            </div>
            <div class="form-group col-md-7">
                <%= f.submit class: 'btn btn-primary' %>
            </div>
        <% end %>
        </div>
    </div>
</section>