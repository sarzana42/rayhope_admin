<section class="content-header">

<h1><%= @project.title %></h1>

</section>

<section class="content">
    <div class="box">
        <div class="box-header">
            <p><%= link_to "プロジェクト一覧へ戻る", rayadmin_projects_path %></p>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-inline">
                    <%= form_for [:rayadmin, @project, @project.tasks.build] do |f| %>
                        <div class="form-group">
                            <%= f.text_field :title %>
                        </div>
                        <div class="form-group">
                            <%= f.submit %>
                        </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="col-xs-1">ID</th>
                        <th>タスク名</th>
                        <th class="col-xs-2"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @project.tasks.each do |task| %>
                    <tr>
                        <td><%= task.id %></td>
                        <td><%= task.title %></td>
                        <td>
                            <div class="btn btn-info btn-xs"><%= link_to "編集", "#" %></div>
                            <div class="btn btn-danger btn-xs">
                                <%= link_to "削除", rayadmin_project_task_path(task.project_id, task.id), method: :delete, data: { confirm: "本当によろしいですかよろしいですか？"} %>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                
            </table>
        </div>
    </div>
</section>